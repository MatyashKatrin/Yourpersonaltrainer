<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5c5f6c"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        android:src="@drawable/header"
        android:layout_weight="2" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:fontFamily="@font/jackpot_pcv"
        android:textSize="72dp"
        android:textAlignment="center"
        android:text="Your Personal Trainer"
        android:gravity="center"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginBottom="24dp"
        android:gravity="bottom"
        android:layout_marginTop="24dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:textSize="10dp"
            android:id="@+id/exercises"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:textColor="#5c5f6c"
            android:maxLines="1"
            android:background="@drawable/main_buttons_background"
            android:text="Exercises"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_weight="1"
            android:textColor="#5c5f6c"
            android:id="@+id/inspirations"
            android:layout_marginRight="6dp"
            android:maxLines="1"
            android:textSize="10dp"
            android:background="@drawable/main_buttons_background"
            android:text="Inspirations"/>

