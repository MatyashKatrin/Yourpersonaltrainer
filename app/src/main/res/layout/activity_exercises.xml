<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="12dp"
                android:textColor="#5c5f6c"
                android:background="@drawable/exercises_item_button"
                android:id="@+id/warmup"
                android:text="warm up" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:textColor="#5c5f6c"
                android:background="@drawable/exercises_item_button"
                android:id="@+id/chest"

                android:text="chest" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="12dp"
                android:textColor="#5c5f6c"
                android:background="@drawable/exercises_item_button"
                android:id="@+id/arms"

                android:text="arms" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="12dp"
                android:textColor="#5c5f6c"
                android:background="@drawable/exercises_item_button"
                android:id="@+id/abs"

                android:text="abs" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="12dp"
                android:textColor="#5c5f6c"
                android:background="@drawable/exercises_item_button"
                android:id="@+id/back"

                android:text="back" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="12dp"
                android:textColor="#5c5f6c"
                android:background="@drawable/exercises_item_button"
                android:id="@+id/legs"

                android:text="legs" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="12dp"
                android:textColor="#5c5f6c"
                android:background="@drawable/exercises_item_button"
                android:id="@+id/bums"

                android:text="bum" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="6dp"
                android:textColor="#5c5f6c"
                android:background="@drawable/exercises_item_button"
                android:id="@+id/strech"

                android:text="streching" />
        </LinearLayout>
</ScrollView>